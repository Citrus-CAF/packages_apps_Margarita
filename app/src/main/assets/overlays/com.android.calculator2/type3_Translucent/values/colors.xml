<resources>

    <!-- Primary color (Color for the toolbars). -->
    <color name="calculator_primary_color">@*android:color/holo_primary</color>

    <!-- Status bar color. -->
    <color name="calculator_statusbar_color">@*android:color/holo_primary_dark</color>

    <!-- Background color of the calculator display. -->
    <color name="display_background_color">@*android:color/background_holo_dark</color>

    <!-- Background color for the numeric pad. -->
    <color name="pad_numeric_background_color">@*android:color/holo_primary</color>

    <!-- Background color for the operator pad. -->
    <color name="pad_operator_background_color">@*android:color/holo_primary_dark</color>

    <!-- Background color for the advanced pad. -->
    <color name="pad_advanced_background_color">@*android:color/holo_primary</color>

    <!-- Background color for empty history view. -->
    <color name="empty_history_color">@*android:color/holo_primary_dark</color>

</resources>
